<body class="heatMapImg">
  
  <div class="row-fluid">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1>Welcome to <span class="titleMouse">Mouse</span> <span class="titleMapper">Mapper</span></h1>
    </div>
    <div class="col-md-3"></div>
  </div>
  <div class="row-fluid">
    <div class="col-md-4"></div>
    <div class="col-md-4" >
      <%= form_for @user do |u| %>
        <div class="form-group">
          <%= u.label :name %>
          <%= u.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= u.label :email %>
          <%= u.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= u.label :password %>
          <%= u.password_field :password, class: "form-control" %>
        </div>
        <%= u.submit "Sign Up", class: "btn signUpBtn pull-right" %>
      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>

  <p class="mouseAttribution">Mouse by Nina Sandgaard Rasmussen</p>

</body>