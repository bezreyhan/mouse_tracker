
<body class="heatMapImg">
  
  <div class="row-fluid">
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <h1><span class="titleMouse">Mouse</span> <span class="titleMapper">Mapper</span> Login</h1>
    </div>
    <div class="col-md-3"></div>
  </div>
  <div class="row-fluid">
    <div class="col-md-4"></div>
    <div class="col-md-4" >
      <%= form_for @user, {url:"/auths", method:"post"} do |u| %>
        <div class="form-group">
          <%= u.label :email %>
          <%= u.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= u.label :password %>
          <%= u.password_field :password, class: "form-control" %>
        </div>
        <%= u.submit "Log in", class: "btn signUpBtn pull-right" %>
      <% end %>
    </div>
    <div class="col-md-4"></div>
  </div>

</body>